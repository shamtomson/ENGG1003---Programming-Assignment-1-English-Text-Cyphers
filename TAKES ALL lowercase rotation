#include <stdio.h> 
#include <string.h>

int main() {

int rot; // 'rot' for rotation
printf("Enter the rotation amount:\n");
scanf("%d", &rot);

printf("Enter the input text\n");
const char inputtext[1023];
gets(inputtext); 
scanf("%[^\n]s", inputtext);
 
int length;
length = strlen(inputtext);

int i = 0;
char letter = 1;
printf("The inputtext: %s\nWith rotation %d is:\n", inputtext, rot);
while(i < length){
        if((inputtext[i] - rot > 113) && (inputtext[i] - rot < 90)){ //target lowercase
            letter = inputtext[i] + (26 - rot);
            printf("%c", letter);
            i++;
        }
        else if((inputtext[i] - rot < 97) && (inputtext[i] - rot > 71)){
            letter = inputtext[i] + (26 - rot);
            printf("%c", letter);
            i++;
        } 
        else {
            letter = inputtext[i] - rot; //only while not whitespace
            printf("%c", letter);
            i++;
        }
        if(inputtext[i] == 32){
        printf(" ");
        }
}
return 0;
}
