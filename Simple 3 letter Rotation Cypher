#include <stdio.h> 
#include <string.h>

int main() {

int rot; // 'rot' for rotation
printf("enter the rotation amount:\n");
scanf("%d", &rot);

const char inputtext[1024];
printf("enter the input text\n");
scanf("%s", inputtext);

char L1 = inputtext[0], L2 = inputtext[1], L3 = inputtext[2];

L1 = inputtext[0] - rot;
L2 = inputtext[1] - rot;
L3 = inputtext[2] - rot;

printf("%c%c%c\n", L1, L2, L3);

return 0;
}
