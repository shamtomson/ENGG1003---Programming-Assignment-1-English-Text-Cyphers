#include <stdio.h> 
#include <string.h>

int main() {

int rot; // 'rot' for rotation
printf("enter the rotation amount:\n");
scanf("%d", &rot);

int i = 0;
const char inputtext[i];
printf("enter the input text\n");
scanf("%s", inputtext);
 
int length;
length = strlen(inputtext);
printf("%d", length);

char l;

if(i == 0 && i <= length){
    l = inputtext[i] - rot;
    printf("%c", l);
    i++; //will work for any rotation < 26
} 

return 0;
}
