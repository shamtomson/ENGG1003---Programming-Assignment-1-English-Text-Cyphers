#include <stdio.h> 
#include <string.h>

int main() {

int rot; // 'rot' for rotation
printf("enter the rotation amount:\n");
scanf("%d", &rot);


char inputtext[1023];
printf("Enter the input text\n");
scanf("%s", inputtext);
 
int length;
length = strlen(inputtext);
printf("The length is %d\n", length);

int i = 0;
char letter = 1;

while(i < length){
    letter = inputtext[i] - rot;
    printf("%c", letter);
    i = i + 1;
} 

return 0;
}
